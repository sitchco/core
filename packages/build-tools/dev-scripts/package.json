{
    "name": "@sitchco/dev-scripts",
    "version": "1.0.0",
    "description": "Provides stable script interfaces for linting and formatting for Sitchco projects",
    "type": "module",
    "bin": {
        "sitchco-lint": "bin/lint.js",
        "sitchco-format": "bin/format.js"
    },
    "scripts": {
        "test": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:ui": "vitest --ui",
        "test:watch": "vitest"
    },
    "dependencies": {
        "@prettier/plugin-php": "^0.22.4",
        "@sitchco/eslint-config": "workspace:*",
        "@sitchco/prettier-config": "workspace:*",
        "@sitchco/project-scanner": "workspace:*",
        "chalk": "^5.4.1",
        "execa": "^9.5.2",
        "svgo": "^3.3.2"
    },
    "peerDependencies": {
        "eslint": ">=9.0.0",
        "prettier": ">=3.0.0"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "license": "ISC",
    "private": false,
    "publishConfig": {
        "access": "public"
    },
    "devDependencies": {
        "@vitest/coverage-v8": "^3.1.1",
        "@vitest/ui": "^3.2.1",
        "vitest": "^3.1.1"
    }
}
